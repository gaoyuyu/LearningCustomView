<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTitleView">
        <attr name="titleText" format="string"></attr>
        <attr name="titleTextColor" format="color"></attr>
        <attr name="titleTextSize" format="dimension"></attr>
    </declare-styleable>


    <declare-styleable name="WaveView">
        <!-- 遮罩类型 圆形 矩形 圆角矩形 自定义图片-->
        <attr name="maskType">
            <enum name="Circle" value="1" />
            <enum name="Rect" value="2" />
            <enum name="RoundRect" value="3" />
            <enum name="Custom" value="4" />
        </attr>
        <!-- 遮罩背景颜色，除自定义图片外-->
        <attr name="maskColor" format="color"></attr>
        <!-- 自定义图片 应用-->
        <attr name="maskCustomBackground" format="reference"></attr>
        <!-- 波浪颜色 -->
        <attr name="waveColor" format="color"></attr>

    </declare-styleable>

    <declare-styleable name="AnimItem">
        <attr name="icon" format="reference"></attr>
        <attr name="bottomText" format="string"></attr>
    </declare-styleable>


    <declare-styleable name="CouponView">
        <attr name="mode">
            <!-- 激活状态 -->
            <enum name="active" value="1" />
            <!-- 未激活状态 -->
            <enum name="inactive" value="2" />
        </attr>
        <!-- 圆角位置 -->
        <attr name="leftTop" format="boolean" />
        <attr name="leftBottom" format="boolean" />
        <attr name="rightTop" format="boolean" />
        <attr name="rightBottom" format="boolean" />
        <!-- 背景颜色 -->
        <attr name="bgColor" format="color" />
        <!-- 线条颜色 -->
        <attr name="lineColor" format="color" />
        <!-- 线条宽度 -->
        <attr name="lineWidth" format="dimension" />
        <!-- 4个位置的圆角半径 -->
        <attr name="cornerCircleRadius" format="dimension" />
        <!-- 矩形圆角半径-->
        <attr name="rectCornerRadius" format="dimension" />
        <!-- 中间虚线位置 -->
        <attr name="midDashLinePosition">
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <!-- 中间虚线宽度 -->
        <attr name="midDashLineWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="RadarScoreView">
        <!-- 数据个数，默认5个 -->
        <attr name="rsv_dataCount" format="integer" />
        <!-- 各维度上的最大值 -->
        <attr name="rsv_maxValue" format="float" />
        <!-- 线条的颜色 -->
        <attr name="rsv_lineColor" format="color" />
        <!-- 线条的描边类型 -->
        <attr name="rsv_lineType" format="enum">
            <!-- 实线 -->
            <enum name="FILL" value="1" />
            <!-- 虚线 -->
            <enum name="STROKE" value="2" />
        </attr>
        <!-- 线条的粗细 -->
        <attr name="rsv_lineWidth" format="dimension" />

        <!-- 雷达维度上的中文文字的大小 -->
        <attr name="rsv_radarTextSize" format="dimension" />
        <!-- 雷达维度上的中文文字的颜色 -->
        <attr name="rsv_radarTextColor" format="color" />

        <!-- 雷达维度上的数值文字的大小 -->
        <attr name="rsv_radarNumberTextSize" format="dimension" />
        <attr name="rsv_radarNumberTextColor" format="color" />

        <!-- 覆盖区域的颜色 -->
        <attr name="rsv_radarCoverColor" format="color" />
        <!-- 动画持续时间 -->
        <attr name="rsv_animDuration" format="integer" />

    </declare-styleable>

</resources>
