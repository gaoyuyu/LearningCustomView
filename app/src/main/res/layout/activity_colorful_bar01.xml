<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:AnimItem="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_colorful_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#888888"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.gaoyy.learningcustomview.ui.ColorfulBarActivity">


    <com.gaoyy.learningcustomview.view.AnimItemV
        android:id="@id/item"
        android:layout_width="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_flower"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textSize="16sp"/>


    </com.gaoyy.learningcustomview.view.AnimItemV>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:text="start"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/reverse"
        android:layout_width="wrap_content"
        android:text="reverse"
        android:layout_height="wrap_content"/>

</LinearLayout>
