<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FadeImageActivity">

    <com.gaoyy.learningcustomview.view.FadeImageView
        android:id="@+id/fade"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:fiv_backgroundImageRes="@mipmap/love_compat_heart_diagram_a50"
        app:fiv_frontImageRes="@mipmap/love_compat_heart_diagram_a100" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="star" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reverse" />

</android.support.v7.widget.LinearLayoutCompat>